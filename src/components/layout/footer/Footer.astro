---
// src/components/layout/footer/Footer.astro
import { 
  BUSINESS_INFO, 
  CONTACT, 
  GOOGLE_MAPS,
  ACTIVE_SOCIAL_MEDIA,
  BUSINESS_HOURS,
  getServicesForNavigation, 
  getCompanyLinks,
  getLegalLinks
} from '@/lib/business-config.js';
import { Phone, Mail, MapPin, Clock, Facebook, Instagram, Linkedin, Twitter, Pinterest, Youtube } from '@lucide/astro';

const businessName = BUSINESS_INFO.name;
const businessDescription = `Professional ${BUSINESS_INFO.primaryKeyword} providing quality solutions and exceptional customer service.`;
const contactInfo = {
  phone: CONTACT.phone,
  email: CONTACT.email,
  address: CONTACT.address
};

// Extract map embed URL from embedCode
const mapEmbedMatch = GOOGLE_MAPS.embedCode.match(/src="([^"]*)"/);
const mapEmbedUrl = mapEmbedMatch ? mapEmbedMatch[1] : GOOGLE_MAPS.fullUrl;

// Build social links from config
const socialIconMap = {
  facebook: Facebook,
  instagram: Instagram,
  linkedin: Linkedin,
  twitter: Twitter,
  pinterest: Pinterest,
  youtube: Youtube,
};

const defaultSocialLinks = Object.entries(ACTIVE_SOCIAL_MEDIA)
  .map(([key, href]) => ({
    icon: socialIconMap[key] || Facebook,
    href: href,
    name: key.charAt(0).toUpperCase() + key.slice(1),
  }));

// Services with "All Services" first
const defaultServices = [
  { name: "All Services", href: "/services/" },
  ...getServicesForNavigation()
];

const defaultCompanyLinks = getCompanyLinks();
const legalLinks = getLegalLinks();
const copyright = `© ${new Date().getFullYear()} ${businessName}. All rights reserved.`;

// Format business hours (Mon-Fri format)
// Matching the old site display exactly
const formatBusinessHours = () => {
  return "Mon-Fri: 8AM-6PM";
};
---

<section class="pb-16 bg-neutral-900">
  {/* Location Header */}
  <div class="bg-neutral-800 py-4">
    <div class="mx-auto max-w-7xl px-4">
      <div class="text-center">
        <p class="text-lg font-semibold mb-1 text-white">Visit Our Location</p>
        <p class="text-white text-sm">{contactInfo.address}</p>
      </div>
    </div>
  </div>

  {/* Interactive Map */}
  <iframe
    src={mapEmbedUrl}
    width="100%"
    height="300"
    allowfullscreen
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
    class="w-full h-[300px] mb-4"
    title={`${businessName} ${CONTACT.city}, ${CONTACT.state} Location`}
  />

  {/* Main Footer Content */}
  <div class="mx-auto max-w-7xl px-2">
    <div class="flex w-full flex-col justify-between gap-8 lg:flex-row lg:items-start lg:text-left">
      {/* Business Info */}
      <div class="flex w-full lg:max-w-md flex-col gap-4 lg:items-start">
        <div class="flex items-center gap-2 lg:justify-start">
          <a href="/">
            <img
              alt={`${businessName} Logo`}
              title={businessName}
              width="300"
              height="64"
              class="h-16 w-auto"
              src={BUSINESS_INFO.logo}
            />
          </a>
        </div>
        <p class="text-sm text-white leading-relaxed">
          {businessDescription}
        </p>
        
        {/* Contact Info */}
        <div class="space-y-2 text-sm text-white">
          <p class="flex items-center gap-2">
            <Phone class="text-white w-4 h-4" />
            <a href={`tel:${contactInfo.phone}`} class="hover:text-primary transition-colors text-white">
              {contactInfo.phone}
            </a>
          </p>
          <p class="flex items-center gap-2">
            <Mail class="text-white w-4 h-4" />
            <a href={`mailto:${contactInfo.email}`} class="hover:text-primary transition-colors text-white">
              {contactInfo.email}
            </a>
          </p>
          <p class="flex items-center gap-2">
            <MapPin class="text-white w-4 h-4" />
            <span class="text-white">Locations:</span>
          </p>
          <div class="ml-6 space-y-1">
            <div>
              <p class="text-xs text-white">
                Headquarters
              </p>
              <a
                href={`https://maps.google.com/?q=${encodeURIComponent(contactInfo.address)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="block hover:text-primary transition-colors text-xs text-white"
              >
                {contactInfo.address}
              </a>
            </div>
          </div>
          <p class="flex items-center gap-2">
            <Clock class="text-white w-4 h-4" />
            <span class="text-white">{formatBusinessHours()}</span>
          </p>
        </div>
      </div>

      {/* Navigation Links */}
      <div class="grid w-full gap-8 md:grid-cols-3 lg:gap-12">
        {/* Services */}
        <div>
          <p class="mb-4 font-bold text-white text-lg">Services</p>
          <ul class="space-y-2 text-sm text-white">
            {defaultServices.map((service) => (
              <li key={service.href} class="hover:text-primary text-white transition-colors">
                <a href={service.href}>{service.name}</a>
              </li>
            ))}
          </ul>
        </div>

        {/* Company */}
        <div>
          <p class="mb-4 font-bold text-white text-lg">Company</p>
          <ul class="space-y-2 text-sm text-white">
            {defaultCompanyLinks.map((link) => (
              <li key={link.href} class="hover:text-primary text-white transition-colors">
                <a href={link.href}>{link.name}</a>
              </li>
            ))}
          </ul>
        </div>

        {/* Social Links */}
        <div>
          <p class="mb-4 font-bold text-white text-lg">Find Us</p>
          <div class="space-y-3">
            {defaultSocialLinks.map((social) => {
              const IconComponent = social.icon;
              return (
                <a
                  key={social.name}
                  aria-label={social.name}
                  class="flex items-center gap-1 text-sm text-white hover:text-primary transition-colors group"
                  href={social.href}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <span class="flex items-center justify-center w-8 h-8 rounded-full text-white group-hover:text-primary transition-all duration-300">
                    <IconComponent class="size-5" />
                  </span>
                  <span>{social.name}</span>
                </a>
              );
            })}
          </div>
        </div>
      </div>
    </div>

    {/* DBLSEO Bottom Section */}
    <div class="mt-12 border-t border-background/20 pt-8">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <div class="flex flex-col sm:flex-row items-center gap-4 text-sm text-white">
          <p>{copyright}</p>
          <span class="hidden sm:inline text-white">•</span>
          <div class="flex items-center gap-1 text-xs text-white">
            <span>Website Design &amp; SEO by</span>
            <a 
              href="https://dblseo.com/" 
              target="_blank" 
              rel="noopener noreferrer" 
              class="flex items-center gap-2 transition-colors hover:text-primary"
            >
              <img 
                alt="DBLSEO Logo" 
                loading="lazy" 
                width="20" 
                height="20" 
                class="object-contain" 
                src="/assets/config/dblseo-logo.webp"
              />
              <span class="font-semibold">DBLSEO.</span>
            </a>
          </div>
        </div>
        <div class="flex items-center gap-4 text-sm text-white">
          {legalLinks.length > 0 && (
            <>
              <a
                class="hover:text-primary transition-colors"
                href={legalLinks[0].href}
              >
                {legalLinks[0].name}
              </a>
              {legalLinks.length > 1 && (
                <>
                  <span class="text-white">•</span>
                  <a
                    class="hover:text-primary transition-colors"
                    href={legalLinks[1].href}
                  >
                    {legalLinks[1].name}
                  </a>
                </>
              )}
            </>
          )}
        </div>
      </div>
    </div>
  </div>
</section>
