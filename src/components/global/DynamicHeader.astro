---
import headerData from '@/components/global/dynamic-header/dynamic-header-data.json';
import { Home, ChevronRight } from 'lucide-astro'; // We'll use lucide icons for Astro
import Button from '@/components/ui/Button.astro'; // Optional: Create a lightweight Astro button component

// Props interface equivalent
const {
  title,
  subtitle,
  description,
  image = "/assets/images/Mike_s Garage Door Repair Center 1.webp",
  badges = [],
  cta,
  breadcrumbs = [],
  className = ""
} = Astro.props;
---

<div class={`relative min-h-[60vh] flex justify-center items-center pt-20 bg-gradient-to-br from-primary via-primary-hover to-accent overflow-hidden ${className}`}>
  <!-- Background Image -->
  <div class="absolute inset-0">
    <img 
      src={image} 
      alt={title}
      class="object-cover w-full h-full opacity-60"
      loading="eager"
      decoding="async"
    />
    <div class="absolute inset-0 bg-gradient-to-br from-primary/70 via-primary-hover/70 to-accent/70"></div>
    <div class="absolute inset-0 bg-black/20"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 min-h-[60vh] flex items-center">
    <div class="max-w-7xl mx-auto px-4 py-16 w-full">
      <div class="text-center max-w-4xl mx-auto">

        {description && (
          <p class="text-lg text-text-light/80 mb-1 leading-relaxed max-w-3xl mx-auto">
            {description}
          </p>
        )}

        <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight text-text-light">
          {title}
        </h1>

        {subtitle && (
          <h2 class="text-xl md:text-2xl text-text-light/90 mb-6 font-medium">
            {subtitle}
          </h2>
        )}

        <!-- CTA Buttons -->
        {cta && (
          <div class="flex flex-col sm:flex-row gap-8 justify-center mb-8">
            {cta.primary && (
              <a
                href={cta.primary.link}
                class={`inline-flex items-center justify-center gap-2 font-semibold text-lg px-8 py-4 rounded-lg shadow-md hover:shadow-xl transition-all duration-300 whitespace-nowrap ${
                  cta.primary.style === 'outline'
                    ? 'border border-white/70 text-white bg-transparent hover:bg-white/10'
                    : 'bg-[#4B6FFF] text-white hover:bg-[#3B5DE8]'
                }`}
              >
                {cta.primary.text}
              </a>
            )}
            {cta.secondary && (
              <a
                href={cta.secondary.link}
                class={`inline-flex items-center justify-center gap-2 font-semibold text-lg px-8 py-4 rounded-lg shadow-md hover:shadow-xl transition-all duration-300 whitespace-nowrap ${
                  cta.secondary.style === 'outline'
                    ? 'border border-white/70 text-white bg-transparent hover:bg-white/10'
                    : 'bg-[#4B6FFF] text-white hover:bg-[#3B5DE8]'
                }`}
              >
                {cta.secondary.text}
              </a>
            )}
          </div>
        )}

        <!-- Badges -->
        {badges.length > 0 && (
          <div class="flex flex-wrap justify-center gap-2 mb-6">
            {badges.map((badge) => (
              <span class="bg-background/20 backdrop-blur-sm text-text-light px-3 py-1 rounded-full text-sm font-medium border border-background/30">
                {badge}
              </span>
            ))}
          </div>
        )}

        <!-- Breadcrumbs -->
        {breadcrumbs.length > 0 && (
          <nav class="flex items-center justify-center text-text-light/80 text-sm">
            <a href="/" class="flex items-center hover:text-text-light transition-colors">
              <Home class="h-4 w-4 mr-1" />
              Home
            </a>
            {breadcrumbs.map((breadcrumb) => (
              <>
                <ChevronRight class="h-4 w-4 mx-2 text-text-light/60" />
                <a href={breadcrumb.href} class="hover:text-text-light transition-colors">
                  {breadcrumb.label}
                </a>
              </>
            ))}
          </nav>
        )}
      </div>
    </div>
  </div>
</div>
