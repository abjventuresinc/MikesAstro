---
interface Testimonial {
  id: string;
  name: string;
  role: string;
  company: string;
  profilePic: string;
  rating: number;
  review: string;
}

interface Props {
  testimonials: Testimonial[];
  speed?: number;
  className?: string;
}

const { testimonials, speed = 30, className = '' } = Astro.props;

// Duplicate testimonials to create seamless loop
const duplicatedTestimonials = [...testimonials, ...testimonials];

// Helper function to get initials
const getInitials = (name: string) => {
  return name
    .split(' ')
    .filter(word => word.length > 0 && word !== '&')
    .map(word => word[0])
    .join('')
    .toUpperCase()
    .slice(0, 2);
};
---

<div class={`w-full py-16 bg-gradient-to-br from-gray-50 to-blue-50 ${className}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Real Stories from Real Customers
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        The truth is, our reputation speaks louder than any advertisement ever could. Here's what neighbors across Dallas-Fort Worth are saying about their experience with Mike's Garage Door Repair Center.
      </p>
    </div>

    <!-- Slider Container with Fog Effects -->
    <div class="relative">
      <!-- Left Fog Effect -->
      <div class="absolute left-0 top-0 bottom-0 w-32 bg-gradient-to-r from-gray-50 via-gray-50/80 to-transparent z-10 pointer-events-none" />
      
      <!-- Right Fog Effect -->
      <div class="absolute right-0 top-0 bottom-0 w-32 bg-gradient-to-l from-gray-50 via-gray-50/80 to-transparent z-10 pointer-events-none" />

      <!-- Infinite Slider -->
      <div
        id="testimonial-slider"
        class="flex gap-6 overflow-hidden scrollbar-hide"
      >
        {duplicatedTestimonials.map((testimonial, index) => (
          <div
            class="flex-shrink-0 w-80 bg-white rounded-xl shadow-lg border border-gray-100 p-6 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1"
          >
            <!-- Rating -->
            <div class="mb-4">
              <div class="flex items-center space-x-1">
                {[...Array(5)].map((_, i) => (
                  <svg
                    class={`w-4 h-4 ${
                      i < testimonial.rating ? 'text-yellow-400 fill-current' : 'text-gray-300'
                    }`}
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
                <span class="ml-2 text-sm text-gray-600">({testimonial.rating}/5)</span>
              </div>
            </div>

            <!-- Review -->
            <blockquote class="text-gray-700 mb-6 leading-relaxed text-sm">
              &ldquo;{testimonial.review}&rdquo;
            </blockquote>

            <!-- Profile -->
            <div class="flex items-center space-x-4">
              <div class="relative">
                {testimonial.profilePic ? (
                  <img
                    src={testimonial.profilePic}
                    alt={testimonial.name}
                    width={48}
                    height={48}
                    class="w-12 h-12 rounded-full object-cover border-2 border-blue-100"
                    loading="lazy"
                    decoding="async"
                  />
                ) : (
                  <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center border-2 border-blue-100">
                    <span class="text-white font-bold text-sm">
                      {getInitials(testimonial.name)}
                    </span>
                  </div>
                )}
                <div class="absolute -top-1 -right-1 w-4 h-4 bg-blue-500 rounded-full flex items-center justify-center">
                  <svg class="w-2.5 h-2.5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>

              <div class="flex-1 min-w-0">
                <h4 class="font-semibold text-gray-900 text-base truncate">
                  {testimonial.name}
                </h4>
                <p class="text-gray-600 text-sm truncate">
                  {testimonial.role}
                </p>
                <p class="text-blue-600 text-xs font-medium truncate">
                  {testimonial.company}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="text-center mt-8">
      <div class="inline-flex items-center space-x-2 text-sm text-gray-500">
        <div class="w-2 h-2 bg-blue-400 rounded-full animate-pulse"></div>
        <span>Scroll to see more testimonials</span>
        <div class="w-2 h-2 bg-blue-400 rounded-full animate-pulse"></div>
      </div>
    </div>
  </div>
</div>

<script define:vars={{ speed }}>
  (function() {
    const container = document.getElementById('testimonial-slider');
    if (!container) return;

    let scrollPosition = 0;
    const scrollWidth = container.scrollWidth / 2; // Since we duplicated the testimonials
    const speedPerFrame = speed / 60; // Convert to pixels per frame (60fps)
    let animationFrameId = null;

    const animate = () => {
      scrollPosition += speedPerFrame;
      if (scrollPosition >= scrollWidth) {
        scrollPosition = 0;
      }
      container.scrollLeft = scrollPosition;
      animationFrameId = requestAnimationFrame(animate);
    };

    // Start animation
    animationFrameId = requestAnimationFrame(animate);

    // Cleanup on page unload
    window.addEventListener('beforeunload', () => {
      if (animationFrameId) {
        cancelAnimationFrame(animationFrameId);
      }
    });
  })();
</script>

<style>
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>
