---
import { ArrowLeft, Facebook, Twitter, Linkedin, Copy, Check } from '@lucide/astro';

interface Props {
  post: any;
  relatedPosts?: any[];
}

const { post, relatedPosts = [] } = Astro.props;

const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

// Format content (basic markdown conversion)
function formatContent(content: string) {
  return content.split('\n').map((line, index) => {
    if (line.startsWith('## ')) {
      return { type: 'h2', content: line.substring(3), index };
    }
    if (line.startsWith('### ')) {
      return { type: 'h3', content: line.substring(4), index };
    }
    if (line.startsWith('* ') && !line.startsWith('* *')) {
      return { type: 'li', content: line.substring(2), index };
    }
    if (line.trim() === '') {
      return { type: 'br', content: '', index };
    }
    if (line.trim() !== '') {
      return { type: 'p', content: line, index };
    }
    return null;
  }).filter(Boolean);
}

const contentBlocks = formatContent(post.content);
---

<div class="min-h-screen bg-background">
  <!-- Header with Background Image and Category -->
  <header class="relative h-96 md:h-[500px] overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img
        src={post.image.url}
        alt={post.title}
        class="object-cover w-full h-full"
        loading="eager"
        decoding="async"
      />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>

    <!-- Content Overlay -->
    <div class="relative z-10 h-full flex flex-col justify-center">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <!-- Category -->
        <div class="mb-6">
          <a
            href={`/${post.category.slug}`}
            class="inline-block bg-primary text-primary-foreground px-4 py-2 rounded-full text-sm font-medium hover:bg-primary-hover transition-colors"
          >
            {post.category.name}
          </a>
        </div>
        
        <!-- Title -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
          {post.title}
        </h1>
      </div>
    </div>
  </header>

  <!-- Breadcrumb Navigation -->
  <div class="bg-card border-b border-border">
    <div class="max-w-4xl mx-auto px-4 py-4">
      <a href="/blog" class="inline-flex items-center gap-2 text-muted-foreground hover:text-primary transition-colors">
        <ArrowLeft class="w-4 h-4" />
        Back to Blog
      </a>
    </div>
  </div>

  <!-- Article Content -->
  <article class="bg-background">
    <div class="max-w-4xl mx-auto px-4 py-8">
      <!-- Author, Date, and Share Buttons -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-6 mb-8 pb-8 border-b border-border">
        <!-- Author and Date -->
        <div class="flex items-center gap-4">
          <div class="relative w-12 h-12 rounded-full overflow-hidden">
            <img
              src={post.author.avatar}
              alt={post.author.name}
              class="object-cover w-full h-full"
              loading="lazy"
              decoding="async"
            />
          </div>
          <div>
            <p class="font-semibold text-foreground">{post.author.name}</p>
            <div class="flex items-center gap-4 text-sm text-muted-foreground">
              <span>{formatDate(post.publishedAt)}</span>
              <span>â€¢</span>
              <span>{post.readTime}</span>
            </div>
          </div>
        </div>

        <!-- Share Buttons -->
        <div class="flex items-center gap-2">
          <span class="text-sm text-muted-foreground mr-2">Share:</span>
          <button
            id="share-facebook"
            class="p-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition-colors"
            aria-label="Share on Facebook"
          >
            <Facebook class="w-4 h-4" />
          </button>
          <button
            id="share-twitter"
            class="p-2 rounded-lg bg-black text-white hover:bg-gray-800 transition-colors"
            aria-label="Share on Twitter"
          >
            <Twitter class="w-4 h-4" />
          </button>
          <button
            id="share-linkedin"
            class="p-2 rounded-lg bg-blue-700 text-white hover:bg-blue-800 transition-colors"
            aria-label="Share on LinkedIn"
          >
            <Linkedin class="w-4 h-4" />
          </button>
          <button
            id="copy-url"
            class="p-2 rounded-lg bg-muted text-muted-foreground hover:bg-muted-hover transition-colors"
            aria-label="Copy URL"
          >
            <Copy id="copy-icon" class="w-4 h-4" />
            <Check id="check-icon" class="w-4 h-4 hidden" />
          </button>
        </div>
      </div>

      <!-- Content -->
      <div class="prose prose-lg max-w-none">
        {contentBlocks.map((block) => {
          if (block.type === 'h2') {
            return <h2 key={block.index} class="text-2xl md:text-3xl font-bold text-foreground mb-6 mt-8 first:mt-0">{block.content}</h2>;
          }
          if (block.type === 'h3') {
            return <h3 key={block.index} class="text-xl md:text-2xl font-semibold text-foreground mb-4 mt-6">{block.content}</h3>;
          }
          if (block.type === 'li') {
            return <li key={block.index} class="text-muted-foreground mb-2 ml-4">{block.content}</li>;
          }
          if (block.type === 'br') {
            return <br key={block.index} />;
          }
          if (block.type === 'p') {
            return <p key={block.index} class="text-muted-foreground leading-relaxed mb-4">{block.content}</p>;
          }
          return null;
        })}
      </div>

      <!-- Tags -->
      {post.tags && post.tags.length > 0 && (
        <div class="mt-12 pt-8 border-t border-border">
          <div class="flex flex-wrap gap-2">
            {post.tags.map((tag, index) => (
              <span
                key={index}
                class="bg-secondary text-secondary-foreground px-3 py-1 rounded-full text-sm"
              >
                {tag}
              </span>
            ))}
          </div>
        </div>
      )}
    </div>
  </article>

  <!-- More Articles Section -->
  {relatedPosts.length > 0 && (
    <section class="bg-bg-secondary py-16">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-foreground mb-12 text-center">More Articles</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {relatedPosts.map((relatedPost) => (
            <a
              key={relatedPost.id}
              href={`/${relatedPost.category.slug}/${relatedPost.slug}`}
              class="group block"
            >
              <article class="bg-card rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-border">
                <div class="relative h-48 overflow-hidden">
                  <img
                    src={relatedPost.image.url}
                    alt={relatedPost.title}
                    class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-110"
                    loading="lazy"
                    decoding="async"
                  />
                </div>
                <div class="p-6">
                  <div class="flex items-center gap-4 mb-3">
                    <span class="bg-primary text-primary-foreground px-3 py-1 rounded-full text-xs font-medium">
                      {relatedPost.category.name}
                    </span>
                    <span class="text-muted-foreground text-sm">{relatedPost.readTime}</span>
                  </div>
                  <h3 class="text-xl font-bold text-foreground mb-3 group-hover:text-primary transition-colors line-clamp-2">
                    {relatedPost.title}
                  </h3>
                  <p class="text-muted-foreground line-clamp-3">
                    {relatedPost.excerpt}
                  </p>
                </div>
              </article>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}
</div>

<script>
  (function() {
    // Share functions
    function shareToFacebook() {
      const url = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(window.location.href)}&quote=${encodeURIComponent(`Check out this article: ${document.querySelector('h1')?.textContent || ''}`)}`;
      window.open(url, '_blank');
    }

    function shareToTwitter() {
      const url = `https://twitter.com/intent/tweet?url=${encodeURIComponent(window.location.href)}&text=${encodeURIComponent(`Check out this article: ${document.querySelector('h1')?.textContent || ''}`)}`;
      window.open(url, '_blank');
    }

    function shareToLinkedIn() {
      const url = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(window.location.href)}&title=${encodeURIComponent(document.querySelector('h1')?.textContent || '')}&summary=${encodeURIComponent(document.querySelector('p')?.textContent || '')}`;
      window.open(url, '_blank');
    }

    async function copyUrl() {
      try {
        await navigator.clipboard.writeText(window.location.href);
        const copyIcon = document.getElementById('copy-icon');
        const checkIcon = document.getElementById('check-icon');
        const copyBtn = document.getElementById('copy-url');
        
        if (copyIcon) copyIcon.classList.add('hidden');
        if (checkIcon) checkIcon.classList.remove('hidden');
        if (copyBtn) {
          copyBtn.classList.remove('bg-muted', 'text-muted-foreground');
          copyBtn.classList.add('bg-green-600', 'text-white');
        }
        
        setTimeout(() => {
          if (copyIcon) copyIcon.classList.remove('hidden');
          if (checkIcon) checkIcon.classList.add('hidden');
          if (copyBtn) {
            copyBtn.classList.remove('bg-green-600', 'text-white');
            copyBtn.classList.add('bg-muted', 'text-muted-foreground');
          }
        }, 2000);
      } catch (err) {
        console.error('Failed to copy URL:', err);
      }
    }

    document.getElementById('share-facebook')?.addEventListener('click', shareToFacebook);
    document.getElementById('share-twitter')?.addEventListener('click', shareToTwitter);
    document.getElementById('share-linkedin')?.addEventListener('click', shareToLinkedIn);
    document.getElementById('copy-url')?.addEventListener('click', copyUrl);
  })();
</script>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>


