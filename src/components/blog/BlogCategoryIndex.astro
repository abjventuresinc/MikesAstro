---
import { Calendar, Clock, User, Tag, Search, ArrowLeft } from 'lucide-astro';

interface Props {
  category: any;
  posts: any[];
  featuredPosts: any[];
  regularPosts: any[];
  allCategories: any[];
  allTags: any[];
}

const { category, posts, featuredPosts, regularPosts, allCategories, allTags } = Astro.props;

const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<div class="min-h-screen bg-background">
  <!-- Back Navigation -->
  <div class="bg-secondary border-b border-border">
    <div class="container mx-auto px-4 py-4">
      <a href="/blog" class="inline-flex items-center gap-2 text-primary hover:text-primary/80 transition-colors">
        <ArrowLeft class="w-4 h-4" />
        Back to Blog
      </a>
    </div>
  </div>

  <div class="container mx-auto px-4 max-w-7xl py-8">
    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Main Content -->
      <div class="flex-1">
        <!-- Category Header -->
        <div class="mb-8">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center">
              <Tag class="w-6 h-6 text-primary" />
            </div>
            <div>
              <h1 class="text-3xl md:text-4xl font-bold text-text-dark">
                {category.name}
              </h1>
              <p class="text-text-secondary">
                {category.description}
              </p>
            </div>
          </div>
          <div class="flex items-center gap-4 text-text-muted text-sm">
            <span>{posts.length} articles</span>
            <span>•</span>
            <span>Updated {formatDate(posts[0]?.publishedAt || new Date().toISOString())}</span>
          </div>
        </div>

        <!-- Search and Sort Controls -->
        <div class="mb-8 bg-secondary p-6 rounded-lg">
          <div class="flex flex-col sm:flex-row gap-4 mb-4">
            <div class="relative flex-1">
              <Search class="absolute left-3 top-1/2 transform -translate-y-1/2 text-text-muted w-4 h-4" />
              <input
                type="text"
                id="category-search"
                placeholder="Search articles..."
                class="w-full pl-10 pr-4 py-3 border border-border rounded-lg bg-background text-text-dark placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary"
              />
            </div>
            <select
              id="category-sort"
              class="px-4 py-3 border border-border rounded-lg bg-background text-text-dark focus:outline-none focus:ring-2 focus:ring-primary"
            >
              <option value="date">Sort by Date</option>
              <option value="title">Sort by Title</option>
              <option value="readTime">Sort by Read Time</option>
            </select>
          </div>
          
          <!-- Active Filters -->
          <div id="active-filters" class="hidden flex flex-wrap items-center gap-2 mb-4">
            <span class="text-text-muted text-sm">Active filters:</span>
            <div id="filter-badges"></div>
            <button
              id="clear-filters-btn"
              class="text-text-muted hover:text-text-dark text-sm underline"
            >
              Clear all
            </button>
          </div>
        </div>

        <!-- Featured Posts -->
        {featuredPosts.length > 0 && (
          <section class="mb-12" id="featured-posts">
            <h2 class="text-2xl font-bold text-text-dark mb-6">Featured Articles</h2>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              {featuredPosts.map((post) => (
                <article key={post.id} class="bg-secondary rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300">
                  <div class="relative h-64 lg:h-80">
                    <img
                      src={post.image.url}
                      alt={post.image.alt}
                      class="object-cover w-full h-full"
                      loading="lazy"
                      decoding="async"
                    />
                    <div class="absolute top-4 left-4">
                      <span class="bg-primary text-primary-foreground px-3 py-1 rounded-full text-sm font-medium">
                        Featured
                      </span>
                    </div>
                  </div>
                  <div class="p-8">
                    <h3 class="text-2xl font-bold text-text-dark mb-4 line-clamp-2">
                      <a href={`/${category.slug}/${post.slug}`} class="hover:text-primary transition-colors">
                        {post.title}
                      </a>
                    </h3>
                    <p class="text-text-secondary mb-6 line-clamp-3">
                      {post.excerpt}
                    </p>
                    <div class="flex items-center justify-between text-text-muted text-sm mb-6">
                      <div class="flex items-center gap-2">
                        <User class="w-4 h-4" />
                        <span>{post.author.name}</span>
                      </div>
                      <div class="flex items-center gap-2">
                        <Calendar class="w-4 h-4" />
                        <span>{formatDate(post.date)}</span>
                      </div>
                      <div class="flex items-center gap-2">
                        <Clock class="w-4 h-4" />
                        <span>{post.readTime}</span>
                      </div>
                    </div>
                    <a href={`/${category.slug}/${post.slug}`}>
                      <button class="w-full bg-primary text-primary-foreground hover:bg-primary-hover px-6 py-3 rounded-lg font-medium transition-colors">
                        Read Article
                      </button>
                    </a>
                  </div>
                </article>
              ))}
            </div>
          </section>
        )}

        <!-- Regular Posts -->
        <section>
          <h2 class="text-2xl font-bold text-text-dark mb-6">
            {featuredPosts.length > 0 ? 'All Articles' : 'Articles'}
          </h2>
          <div id="posts-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {posts.map((post) => (
              <article key={post.id} class="bg-background rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 blog-post-item" data-tags={post.tags.join(',')}>
                <div class="relative h-48">
                  <img
                    src={post.image.url}
                    alt={post.image.alt}
                    class="object-cover w-full h-full"
                    loading="lazy"
                    decoding="async"
                  />
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-bold text-text-dark mb-3 line-clamp-2">
                    <a href={`/${category.slug}/${post.slug}`} class="hover:text-primary transition-colors">
                      {post.title}
                    </a>
                  </h3>
                  <p class="text-text-secondary text-sm mb-4 line-clamp-3">
                    {post.excerpt}
                  </p>
                  <div class="flex items-center justify-between text-text-muted text-sm mb-4">
                    <span>{post.author.name}</span>
                    <span>{post.readTime}</span>
                  </div>
                  <a href={`/${category.slug}/${post.slug}`}>
                    <button class="w-full border border-border bg-background hover:bg-secondary px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                      Read More
                    </button>
                  </a>
                </div>
              </article>
            ))}
          </div>
          <div id="no-results" class="hidden text-center py-12">
            <p class="text-text-muted text-lg">No articles found matching your criteria.</p>
            <button
              id="clear-filters-link"
              class="text-primary hover:text-primary/80 underline mt-2"
            >
              Clear filters
            </button>
          </div>
        </section>
      </div>

      <!-- Sidebar -->
      <div class="lg:w-80">
        <div class="sticky top-8 space-y-6">
          <!-- Categories -->
          <div class="bg-secondary p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-text-dark mb-4">Categories</h3>
            <div class="space-y-2">
              {allCategories.map((cat) => (
                <a
                  key={cat.id}
                  href={`/${cat.slug}`}
                  class={`block px-3 py-2 rounded-lg text-sm transition-colors ${
                    cat.slug === category.slug
                      ? 'bg-primary text-primary-foreground'
                      : 'text-text-secondary hover:text-text-dark hover:bg-background'
                  }`}
                >
                  {cat.name}
                </a>
              ))}
            </div>
          </div>

          <!-- Tags -->
          <div class="bg-secondary p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-text-dark mb-4">Filter by Tags</h3>
            <div class="flex flex-wrap gap-2" id="tag-filters">
              {allTags.map((tag) => (
                <button
                  key={tag.slug}
                  data-tag={tag.name}
                  class="tag-filter px-3 py-1 rounded-full text-sm transition-colors bg-accent/10 text-accent hover:bg-accent/20"
                >
                  {tag.name} ({tag.count})
                </button>
              ))}
            </div>
          </div>

          <!-- Popular Posts -->
          <div class="bg-secondary p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-text-dark mb-4">Popular in {category.name}</h3>
            <div class="space-y-4">
              {posts.slice(0, 3).map((post) => (
                <a
                  key={post.id}
                  href={`/${category.slug}/${post.slug}`}
                  class="block group"
                >
                  <div class="flex gap-3">
                    <div class="relative w-16 h-16 rounded-lg overflow-hidden flex-shrink-0">
                      <img
                        src={post.image.url}
                        alt={post.image.alt}
                        class="object-cover w-full h-full group-hover:scale-105 transition-transform"
                        loading="lazy"
                        decoding="async"
                      />
                    </div>
                    <div class="flex-1 min-w-0">
                      <h4 class="text-sm font-medium text-text-dark group-hover:text-primary transition-colors line-clamp-2">
                        {post.title}
                      </h4>
                      <p class="text-xs text-text-muted mt-1">
                        {post.readTime}
                      </p>
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </div>

          <!-- CTA -->
          <div class="bg-primary p-6 rounded-lg text-center">
            <h3 class="text-lg font-semibold text-primary-foreground mb-2">
              Need Help?
            </h3>
            <p class="text-primary-foreground/90 text-sm mb-4">
              Our experts are here to help with your {category.name.toLowerCase()} needs.
            </p>
            <a href="/contact">
              <button class="w-full bg-background text-primary-foreground hover:bg-bg-secondary px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                Get Free Consultation
              </button>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script define:vars={{ posts, allTags }}>
  (function() {
    let searchQuery = '';
    let selectedTags = [];
    let sortBy = 'date';

    const allPosts = posts;
    const tags = allTags;

    function filterAndSort() {
      let filtered = [...allPosts];

      // Search filter
      if (searchQuery) {
        const query = searchQuery.toLowerCase();
        filtered = filtered.filter(post =>
          post.title.toLowerCase().includes(query) ||
          post.excerpt.toLowerCase().includes(query) ||
          post.content.toLowerCase().includes(query) ||
          post.tags.some(tag => tag.toLowerCase().includes(query))
        );
      }

      // Tag filter
      if (selectedTags.length > 0) {
        filtered = filtered.filter(post =>
          selectedTags.some(tag => post.tags.includes(tag))
        );
      }

      // Sort
      filtered.sort((a, b) => {
        switch (sortBy) {
          case 'title':
            return a.title.localeCompare(b.title);
          case 'readTime':
            return parseInt(a.readTime) - parseInt(b.readTime);
          case 'date':
          default:
            return new Date(b.publishedAt).getTime() - new Date(a.publishedAt).getTime();
        }
      });

      renderPosts(filtered);
      updateActiveFilters();
    }

    function renderPosts(filteredPosts) {
      const container = document.getElementById('posts-container');
      const noResults = document.getElementById('no-results');
      
      if (!container) return;

      if (filteredPosts.length === 0) {
        container.classList.add('hidden');
        if (noResults) noResults.classList.remove('hidden');
        return;
      }

      container.classList.remove('hidden');
      if (noResults) noResults.classList.add('hidden');

      // Show/hide posts
      container.querySelectorAll('.blog-post-item').forEach((item) => {
        const postTags = item.getAttribute('data-tags')?.split(',') || [];
        const matchesSearch = !searchQuery || item.textContent?.toLowerCase().includes(searchQuery.toLowerCase());
        const matchesTags = selectedTags.length === 0 || selectedTags.some(tag => postTags.includes(tag));
        
        if (matchesSearch && matchesTags) {
          item.classList.remove('hidden');
        } else {
          item.classList.add('hidden');
        }
      });
    }

    function updateActiveFilters() {
      const activeFilters = document.getElementById('active-filters');
      const filterBadges = document.getElementById('filter-badges');
      
      if (!activeFilters || !filterBadges) return;

      if (searchQuery || selectedTags.length > 0) {
        activeFilters.classList.remove('hidden');
        filterBadges.innerHTML = '';
        
        if (searchQuery) {
          const badge = document.createElement('span');
          badge.className = 'bg-primary/10 text-primary px-3 py-1 rounded-full text-sm';
          badge.textContent = `Search: ${searchQuery}`;
          filterBadges.appendChild(badge);
        }
        
        selectedTags.forEach(tag => {
          const badge = document.createElement('span');
          badge.className = 'bg-accent/10 text-accent px-3 py-1 rounded-full text-sm cursor-pointer hover:bg-accent/20';
          badge.textContent = `${tag} ×`;
          badge.addEventListener('click', () => {
            selectedTags = selectedTags.filter(t => t !== tag);
            updateTagButtons();
            filterAndSort();
          });
          filterBadges.appendChild(badge);
        });
      } else {
        activeFilters.classList.add('hidden');
      }
    }

    function updateTagButtons() {
      document.querySelectorAll('.tag-filter').forEach(btn => {
        const tag = btn.getAttribute('data-tag');
        if (selectedTags.includes(tag || '')) {
          btn.className = 'tag-filter px-3 py-1 rounded-full text-sm transition-colors bg-primary text-primary-foreground';
        } else {
          btn.className = 'tag-filter px-3 py-1 rounded-full text-sm transition-colors bg-accent/10 text-accent hover:bg-accent/20';
        }
      });
    }

    // Search input
    document.getElementById('category-search')?.addEventListener('input', (e) => {
      searchQuery = (e.target as HTMLInputElement).value;
      filterAndSort();
    });

    // Sort select
    document.getElementById('category-sort')?.addEventListener('change', (e) => {
      sortBy = (e.target as HTMLSelectElement).value as 'date' | 'title' | 'readTime';
      filterAndSort();
    });

    // Tag filters
    document.querySelectorAll('.tag-filter').forEach(btn => {
      btn.addEventListener('click', () => {
        const tag = btn.getAttribute('data-tag');
        if (!tag) return;
        
        if (selectedTags.includes(tag)) {
          selectedTags = selectedTags.filter(t => t !== tag);
        } else {
          selectedTags.push(tag);
        }
        updateTagButtons();
        filterAndSort();
      });
    });

    // Clear filters
    document.getElementById('clear-filters-btn')?.addEventListener('click', () => {
      searchQuery = '';
      selectedTags = [];
      sortBy = 'date';
      const searchInput = document.getElementById('category-search') as HTMLInputElement;
      const sortSelect = document.getElementById('category-sort') as HTMLSelectElement;
      if (searchInput) searchInput.value = '';
      if (sortSelect) sortSelect.value = 'date';
      updateTagButtons();
      filterAndSort();
    });

    document.getElementById('clear-filters-link')?.addEventListener('click', () => {
      searchQuery = '';
      selectedTags = [];
      sortBy = 'date';
      const searchInput = document.getElementById('category-search') as HTMLInputElement;
      const sortSelect = document.getElementById('category-sort') as HTMLSelectElement;
      if (searchInput) searchInput.value = '';
      if (sortSelect) sortSelect.value = 'date';
      updateTagButtons();
      filterAndSort();
    });
  })();
</script>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

