---
import { Award, Shield, Users, Clock, MapPin, Zap, Heart, Star } from '@lucide/astro'
import { BUSINESS_INFO, LOCATIONS } from '../../lib/business-config.js'

interface Props {
  city?: string;
  cityData?: {
    sectionContent?: {
      whySetsApart?: {
        heading?: string;
        subheading?: string;
        features?: Array<{
          title: string;
          description: string;
        }>;
      };
    };
  };
}

const { city, cityData } = Astro.props;

// Get city-specific content or fallback to defaults
const whySetsApartContent = cityData?.sectionContent?.whySetsApart;
const heading = whySetsApartContent?.heading || `What Sets ${BUSINESS_INFO.name} Apart${city ? ` in ${city}` : ''}`;
const subheading = whySetsApartContent?.subheading || `The truth is, we've been transforming homes with professional garage door solutions for over a decade, and the thing is, our passion shows in every installation we complete. Besides our award-winning garage door services, we specialize in enhancing curb appeal, home security, and property value across ${LOCATIONS[0].state}.`;

// Icon options for features
const iconOptions = [Award, Shield, Users, Clock, MapPin, Zap, Heart, Star];

// Default features if no city-specific data
const defaultFeatures = [
  {
    title: "Award-Winning Excellence",
    description: "Recognized for outstanding craftsmanship and customer satisfaction across ST."
  },
  {
    title: "Quality Guarantee",
    description: "Every installation comes with our comprehensive warranty and ongoing support."
  },
  {
    title: "Expert Team",
    description: "Our certified professionals are trained in the latest techniques and use premium materials."
  },
  {
    title: "Timely Delivery",
    description: "We respect your time and schedule with efficient project management."
  }
];

// Use city-specific features or defaults
const featureData = whySetsApartContent?.features || defaultFeatures;

// Combine feature data with icons
const features = featureData.map((feature, index) => ({
  IconComponent: iconOptions[index] || Award,
  title: feature.title,
  description: feature.description
}));
---

<section class="max-w-7xl mx-auto px-4 sm:px-6 py-12 lg:px-8">
  <div class="container mx-auto max-w-7xl relative z-10 px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold text-foreground mb-8">
        {heading}
      </h2>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto leading-relaxed">
        {subheading}
      </p>
    </div>

    <div class="h-[100%] grid grid-cols-1 md:grid-cols-2 gap-12">
      {features.map((feature, index) => {
        const IconComponent = feature.IconComponent;
        return (
          <div class="what-sets-apart-card bg-gray-50 items-center justify-center flex flex-col rounded-xl p-4 shadow-lg hover:shadow-xl transition-all duration-300 group text-center border border-gray-200/50">
            {/* Icon */}
            <div class="mb-1 group-hover:scale-110 transition-transform duration-300 flex justify-center">
              <div class="w-20 h-auto rounded-full flex items-center justify-center border-2 transition-colors what-sets-apart-icon-bg">
                <IconComponent class="w-8 h-8 what-sets-apart-icon" />
              </div>
            </div>
            
            {/* Content */}
            <h3 class="text-xl font-semibold text-foreground mb-2">
              {feature.title}
            </h3>
            <p class="text-gray-600 leading-relaxed">
              {feature.description}
            </p>
          </div>
        );
      })}
    </div>
  </div>
</section>

<style>
  .what-sets-apart-icon {
    color: hsl(var(--primary));
  }
  
  .what-sets-apart-icon-bg {
    background: linear-gradient(to bottom right, hsl(var(--primary) / 0.2), hsl(var(--primary) / 0.1));
    border-color: hsl(var(--primary) / 0.2);
  }
  
  .what-sets-apart-card:hover .what-sets-apart-icon-bg {
    border-color: hsl(var(--primary) / 0.4);
  }
  
  .what-sets-apart-card:hover {
    transform: translateY(-5px);
  }
</style>
