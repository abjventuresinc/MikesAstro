---
// src/pages/privacy-policy.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import { generateDynamicMetadata, generateDynamicStructuredData } from "../lib/seo-metadata.js";
import { siteConfig } from "../lib/seo-config.js";
import DynamicHeader from "../components/global/DynamicHeader.astro";

// Generate metadata
const metadata = generateDynamicMetadata("/privacy-policy/", {
  title: "Privacy Policy | Mike's Garage Door Repair Center",
  description: "Read our privacy policy to understand how we collect, use, and protect your personal information.",
  content: "Privacy Policy for Mike's Garage Door Repair Center",
  keywords: ["privacy policy", "data protection", "privacy"],
});

// Generate structured data
const structuredData = generateDynamicStructuredData("/privacy-policy/", {
  breadcrumbs: [
    { name: "Home", url: siteConfig.url },
    { name: "Privacy Policy", url: `${siteConfig.url}/privacy-policy/` },
  ],
});
---

<BaseLayout metadata={metadata}>
  {structuredData.map((script) => (
    <script type={script.type} set:html={script.children} />
  ))}
  
  <DynamicHeader
    title="Privacy Policy"
    description="How we collect, use, and protect your information"
    image="/assets/images/Mike_s Garage Door Repair Center 1.webp"
    breadcrumbs={[
      { label: "Home", href: "/" },
      { label: "Privacy Policy", href: "/privacy-policy/" },
    ]}
  />

  <section class="py-16 md:py-20 px-4 bg-white">
    <div class="container mx-auto max-w-4xl">
      <div class="prose prose-lg max-w-none">
        <h2 class="text-3xl font-bold mb-6">Privacy Policy</h2>
        <p class="text-gray-600 mb-4">Last updated: {new Date().toLocaleDateString()}</p>
        
        <div class="space-y-6 text-gray-700">
          <div>
            <h3 class="text-2xl font-semibold mb-4">Introduction</h3>
            <p>
              Mike's Garage Door Repair Center ("we," "our," or "us") is committed to protecting your privacy. 
              This Privacy Policy explains how we collect, use, disclose, and safeguard your information when you 
              visit our website or use our services.
            </p>
          </div>

          <div>
            <h3 class="text-2xl font-semibold mb-4">Information We Collect</h3>
            <p>We may collect information about you in a variety of ways:</p>
            <ul class="list-disc pl-6 space-y-2 mt-4">
              <li>Personal information such as name, email address, phone number, and address</li>
              <li>Information about your garage door service needs</li>
              <li>Payment information for services rendered</li>
              <li>Website usage data and analytics</li>
            </ul>
          </div>

          <div>
            <h3 class="text-2xl font-semibold mb-4">How We Use Your Information</h3>
            <p>We use the information we collect to:</p>
            <ul class="list-disc pl-6 space-y-2 mt-4">
              <li>Provide, maintain, and improve our services</li>
              <li>Process your service requests and transactions</li>
              <li>Communicate with you about your service needs</li>
              <li>Send you marketing communications (with your consent)</li>
              <li>Comply with legal obligations</li>
            </ul>
          </div>

          <div>
            <h3 class="text-2xl font-semibold mb-4">Information Sharing</h3>
            <p>
              We do not sell, trade, or rent your personal information to third parties. We may share your 
              information only in the following circumstances:
            </p>
            <ul class="list-disc pl-6 space-y-2 mt-4">
              <li>With service providers who assist us in operating our business</li>
              <li>When required by law or to protect our rights</li>
              <li>With your consent</li>
            </ul>
          </div>

          <div>
            <h3 class="text-2xl font-semibold mb-4">Data Security</h3>
            <p>
              We implement appropriate technical and organizational measures to protect your personal information 
              against unauthorized access, alteration, disclosure, or destruction.
            </p>
          </div>

          <div>
            <h3 class="text-2xl font-semibold mb-4">Your Rights</h3>
            <p>You have the right to:</p>
            <ul class="list-disc pl-6 space-y-2 mt-4">
              <li>Access your personal information</li>
              <li>Correct inaccurate information</li>
              <li>Request deletion of your information</li>
              <li>Opt-out of marketing communications</li>
            </ul>
          </div>

          <div>
            <h3 class="text-2xl font-semibold mb-4">Contact Us</h3>
            <p>
              If you have questions about this Privacy Policy, please contact us at:
            </p>
            <p class="mt-4">
              <strong>Mike's Garage Door Repair Center</strong><br />
              Email: service@mikesgaragedoorrepaircenter.com<br />
              Phone: (817) 859-8877
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

